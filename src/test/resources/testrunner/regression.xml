<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Orangehrm regression test suite" verbose="3" thread-count="2"
	parallel="tests">


	<listeners>
	<!--	<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />-->
		<listener class-name="com.qa.orangehrm.listeners.AllureTestListener" />
		<listener class-name="com.qa.orangehrm.listeners.AnnotationTransformer" />
	</listeners>


	<test name="Login Page Test_Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.orangehrm.test.LoginPgTest" />
		</classes>
	</test>

	<test name="Login Page Test_Firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.orangehrm.test.LoginPgTest" />
		</classes>
	</test>

	<test name="Login Page Test_Edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.orangehrm.test.LoginPgTest" />
		</classes>
	</test>

	<test name="Dashboard Page Test_Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.orangehrm.test.DashboardPgTest" />
		</classes>
	</test>
</suite>	